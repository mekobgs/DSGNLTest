@page
@model Designli.Web.Pages.Employees.CreateModel
@{
    ViewData["Title"] = "Create Employee";
}

<div class="row justify-content-center mt-4">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm">
            <div class="card-header bg-white py-3">
                <h4 class="mb-0 fw-bold text-primary">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-person-plus-fill me-2" viewBox="0 0 16 16">
                        <path d="M1 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
                        <path fill-rule="evenodd" d="M13.5 5a.5.5 0 0 1 .5.5V7h1.5a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0V8h-1.5a.5.5 0 0 1 0-1H13V5.5a.5.5 0 0 1 .5-.5z"/>
                    </svg>
                    Add New Employee
                </h4>
            </div>
            <div class="card-body p-4">
                <form method="post">
                    <div class="mb-3">
                        <label asp-for="Input.Name" class="form-label text-secondary small fw-bold">FULL NAME</label>
                        <input asp-for="Input.Name" class="form-control" placeholder="Enter full name" required />
                        <span asp-validation-for="Input.Name" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.IdentityNumber" class="form-label text-secondary small fw-bold">IDENTITY NUMBER</label>
                        <input asp-for="Input.IdentityNumber" class="form-control" placeholder="e.g., A12345" required />
                        <span asp-validation-for="Input.IdentityNumber" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Position" class="form-label text-secondary small fw-bold">POSITION</label>
                        <input asp-for="Input.Position" class="form-control" placeholder="e.g., Developer, Designer" required />
                        <span asp-validation-for="Input.Position" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Input.BirthDate" class="form-label text-secondary small fw-bold">BIRTH DATE</label>
                        <input asp-for="Input.BirthDate" type="date" class="form-control" required />
                        <span asp-validation-for="Input.BirthDate" class="text-danger small"></span>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger d-flex align-items-center" role="alert">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16">
                                <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
                            </svg>
                            <div>@Model.ErrorMessage</div>
                        </div>
                    }

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary flex-grow-1">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-circle me-1" viewBox="0 0 16 16">
                                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                                <path d="M10.97 4.97a.235.235 0 0 0-.02.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05z"/>
                            </svg>
                            Save Employee
                        </button>
                        <a asp-page="Index" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
