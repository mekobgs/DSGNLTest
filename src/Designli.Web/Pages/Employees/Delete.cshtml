@page "{id:guid}"
@model Designli.Web.Pages.Employees.DeleteModel
@{
    ViewData["Title"] = "Delete Employee";
}

<div class="row justify-content-center mt-4">
    <div class="col-md-8 col-lg-6">
        <div class="mb-3">
            <a asp-page="Index" class="btn btn-outline-secondary">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left me-1" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"/>
                </svg>
                Back to List
            </a>
        </div>

        <div class="card shadow-sm border-danger">
            <div class="card-header bg-danger bg-opacity-10 py-3 border-danger">
                <h4 class="mb-0 fw-bold text-danger">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-exclamation-triangle-fill me-2" viewBox="0 0 16 16">
                        <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
                    </svg>
                    Delete Employee
                </h4>
            </div>
            <div class="card-body p-4">
                @if (Model.Employee != null)
                {
                    <div class="alert alert-danger d-flex align-items-start">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-exclamation-circle-fill flex-shrink-0 me-2 mt-1" viewBox="0 0 16 16">
                            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8 4a.905.905 0 0 0-.9.995l.35 3.507a.552.552 0 0 0 1.1 0l.35-3.507A.905.905 0 0 0 8 4zm.002 6a1 1 0 1 0 0 2 1 1 0 0 0 0-2z"/>
                        </svg>
                        <div>
                            <strong>Warning:</strong> This action cannot be undone. Are you sure you want to delete this employee?
                        </div>
                    </div>

                    <div class="mb-3 pb-3 border-bottom">
                        <label class="text-secondary small fw-bold">FULL NAME</label>
                        <p class="fs-5 mb-0">@Model.Employee.Name</p>
                    </div>

                    <div class="mb-3 pb-3 border-bottom">
                        <label class="text-secondary small fw-bold">IDENTITY NUMBER</label>
                        <p class="fs-5 mb-0">@Model.Employee.IdentityNumber</p>
                    </div>

                    <div class="mb-3 pb-3 border-bottom">
                        <label class="text-secondary small fw-bold">POSITION</label>
                        <p class="mb-0">
                            <span class="badge bg-info text-dark fs-6">@Model.Employee.Position</span>
                        </p>
                    </div>

                    <div class="mb-4">
                        <label class="text-secondary small fw-bold">BIRTH DATE</label>
                        <p class="fs-5 mb-0">@Model.Employee.BirthDate.ToString("MMMM dd, yyyy")</p>
                    </div>

                    <form method="post">
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-danger flex-grow-1">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash me-1" viewBox="0 0 16 16">
                                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z"/>
                                    <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z"/>
                                </svg>
                                Confirm Delete
                            </button>
                            <a asp-page="Index" class="btn btn-outline-secondary">Cancel</a>
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
</div>
